<% provide(:title, "Search for Properties") %>
<%= bootstrap_form_for(:search, url: listings_path) do |f| %>
    <%= f.text_field :location %>
    <%= f.hidden_field :location_based, :value => false %>
    <%= f.submit 'Search' %>
    <%#= link_to "My location", location_listing_path , class: "btn btn-default"%>
    <%= f.submit "My location", :onclick => 'document.getElementById("search_location_based").value = true; this.form.submit()' , class: "btn btn-default"%>
<% end %>

    <% if @recentsearches then %>
<h2 class="recent-searches">Recent searches</h2>
<table class="recent-searches table-striped table table-hover table-clickeable">
        <%= render  partial: 'shared/recent_search', collection: @recentsearches.reverse[0..3] %>
</table>
    <% end %>
